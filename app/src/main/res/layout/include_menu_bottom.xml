<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/tabBackground"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:elevation="@dimen/toolbar_elevation"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/rl_menu_nearby"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu_nearby"
            android:src="@drawable/selector_nearby_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/menu_img_margin_top"
            android:layout_marginBottom="@dimen/menu_img_margin_bottom"
            android:layout_width="@dimen/menu_img_width"
            android:layout_height="@dimen/menu_img_height" />

        <TextView
            android:layout_below="@id/iv_menu_nearby"
            android:id="@+id/tv_menu_nearby"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="@string/nearby_title"
            android:textColor="@drawable/nav_text_color"
            android:textSize="@dimen/menu_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/rl_menu_timeline"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_menu_timeline"
            android:src="@drawable/selector_timeline_ic"
            android:layout_marginTop="@dimen/menu_img_margin_top"
            android:layout_marginBottom="@dimen/menu_img_margin_bottom"
            android:layout_width="@dimen/menu_img_width"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/menu_img_height" />

        <TextView
            android:layout_below="@id/iv_menu_timeline"
            android:id="@+id/tv_menu_timeline"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeline_title"
            android:textColor="@drawable/nav_text_color"
            android:textSize="@dimen/menu_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_menu_post"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            app:srcCompat="@drawable/ic_add_box_black_24dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

        <!--<TextView-->
            <!--android:layout_below="@id/iv_menu_activities"-->
            <!--android:id="@+id/tv_menu_activities"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/activity_title"-->
            <!--android:textColor="@color/menu_text_color_free"-->
            <!--android:textSize="@dimen/menu_text_size" />-->
    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/rl_menu_chat"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_menu_chat"
            android:src="@drawable/selector_chat_ic"
            android:layout_marginTop="@dimen/menu_img_margin_top"
            android:layout_marginBottom="@dimen/menu_img_margin_bottom"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/menu_img_width"
            android:layout_height="@dimen/menu_img_height" />

        <TextView
            android:layout_below="@id/iv_menu_chat"
            android:id="@+id/tv_menu_chat"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="@string/chat_title"
            android:textColor="@drawable/nav_text_color"
            android:textSize="@dimen/menu_text_size" />
    </RelativeLayout>


    <RelativeLayout
        android:clickable="true"
        android:id="@+id/rl_menu_me"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_menu_me"
            android:src="@drawable/selector_self_ic"
            android:layout_marginTop="@dimen/menu_img_margin_top"
            android:layout_marginBottom="@dimen/menu_img_margin_bottom"
            android:layout_width="@dimen/menu_img_width"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/menu_img_height" />

        <TextView
            android:id="@+id/tv_menu_me"
            android:layout_below="@id/iv_menu_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_title"
            android:layout_centerHorizontal="true"
            android:textColor="@drawable/nav_text_color"
            android:textSize="@dimen/menu_text_size" />

    </RelativeLayout>

</LinearLayout>
