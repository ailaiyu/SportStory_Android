<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:background="@color/defaultBackground"
    android:orientation="vertical"
    tools:context="cn.sportstory.android.nearby.view.NearbyFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        toolbar:elevation="@dimen/toolbar_elevation"
        android:elevation="@dimen/toolbar_elevation"
        app:contentInsetLeft="@dimen/toolbar_content_insert"
        app:contentInsetStart="@dimen/toolbar_content_insert"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/toolBarTextViewStyle"
                android:text="@string/me_title" />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/setting"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/profile_head" android:id="@+id/profile_head"/>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_divider"/>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1px" />

    <include layout="@layout/profile_content" android:id="@+id/profile_content"/>
</LinearLayout>
