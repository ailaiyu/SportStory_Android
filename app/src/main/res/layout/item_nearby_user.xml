<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_nearby_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_nearby_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text_primary"
                    tools:text="昵称" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:padding="4dp"
                    tools:src="@mipmap/ic_man" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/tv_nearby_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    tools:text="5KM" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_nearby_sport1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:padding="2dp"
                        tools:src="@mipmap/pingpong_free" />

                    <ImageView
                        android:id="@+id/iv_nearby_sport2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:padding="2dp"
                        tools:src="@mipmap/juzhong_free" />

                    <ImageView
                        android:id="@+id/iv_nearby_sport3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:padding="2dp"
                        tools:src="@mipmap/baolingqiu_free" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>